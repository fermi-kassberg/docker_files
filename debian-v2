FROM debian:buster-backports

RUN /bin/sh -c "echo \"export PS1='[\e[92mdebian\e[0m \w] # '\" >> /root/.bashrc"

RUN set -xueo
RUN apt-get update && apt-get install -y \
apt-transport-https \
curl wget apt-utils \
gnupg2 \
vim \
nano \
tmux \
bash-completion \
less \
dnsutils \
netcat

WORKDIR /root

COPY tools/kubectl /usr/local/bin/
COPY tools/helm /usr/local/bin/
COPY tools/.tmux.conf /root/.tmux.conf

RUN kubectl completion bash >> /root/.profile
