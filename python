# Here is the build image
FROM python:3.8-slim-buster as build

RUN apt-get update && apt-get install -y \
    gcc \
    apt-transport-https \
    curl \
    wget \
    apt-utils \
    gnupg2 \
    vim \
    nano \
    tmux \
    bash-completion \
    less \
    dnsutils \
    netcat \
    ca-certificates \
    htop \
    procps \
    git \
&&  apt-get clean

RUN echo "export PS1='[\e[92mpython\e[0m \w] # '" >> /root/.bashrc

# This results in a single layer image
FROM scratch
COPY --from=build / /
WORKDIR /root
